
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <h1>Profile</h1>
    <h2>Welcome @Context.User.Identity.Name</h2>

    <form asp-action="UpdateProfile" method="post">
        <div class="form-group">
            <label for="customerName">Name:</label>
            <input type="text" id="customerName" name="customerName" class="form-control" value="@ViewBag.CustomerName" />
        </div>

        <div class="form-group">
            <label for="customerEmail">Email:</label>
            <input type="email" id="customerEmail" name="customerEmail" class="form-control" value="@ViewBag.CustomerEmail" />
        </div>

        <div class="form-group">
            <label for="customerEmail">Phone Number:</label>
            <input type="phone" id="customerDienThoai" name="customerDienThoai" class="form-control" value="@ViewBag.CustomerDienThoai" />
        </div>

        <div class="form-group">
            <label for="customerAddress">Address:</label>
            <input type="text" id="customerAddress" name="customerAddress" class="form-control" value="@ViewBag.CustomerAddress" />
        </div>

        <!-- Thêm các trường khác tùy theo yêu cầu -->

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
