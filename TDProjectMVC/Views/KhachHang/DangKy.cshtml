            <label class="form-label my-3" for="Hinh">Hình<sup>*</sup></label>
            <input type="file" name="Hinh" class="form-control" />
        </div> *@
        <button type="submit" class="primary-btn order-submit" style="margin-top: 20px; margin-left: 110px;" value="">
            Đăng ký
        </button>
    </form>
</div>
