@model TDProjectMVC.ViewModels.ResetPassword
@{
    ViewData["Title"] = "Reset Password";
}

<div class="billing-details" style="display: grid; place-items: center;">
    <div class="section-title">
        <h3 class="title">Reset Password</h3>
    </div>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["error"]
        </div>
    }

    <form asp-action="ResetPassword" method="post">
        <div class="form-group">
            <input class="input" type="email" asp-for="email" placeholder="Nhập email của bạn">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="input" type="password" asp-for="newpassword" placeholder="Nhập mật khẩu mới">
            <span asp-validation-for="newpassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="input" type="password" asp-for="Passwordcheck" placeholder="Xác nhận mật khẩu mới">
            <span asp-validation-for="Passwordcheck" class="text-danger"></span>
        </div>

        <button type="submit" class="primary-btn order-submit" style="margin-top: 20px;">
            Lấy mã xác nhận
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}