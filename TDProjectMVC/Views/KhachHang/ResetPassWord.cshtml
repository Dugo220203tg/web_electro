@model TDProjectMVC.ViewModels.ResetPassword
@{
    ViewData["Title"] = "Reset Password";
}

<div class="billing-details" style="display: grid; place-items: center; margin-top:30px;">
    <div class="form-container">
        <div class="logo-container">
            Forgot Password
        </div>
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["error"]
            </div>
        }
        <form class="form" asp-action="ResetPassword" method="post" >
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="Nhập email" required="" asp-for="email">
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="email">PassWord</label>
                <input class="input" type="password" asp-for="newpassword" placeholder="Nhập mật khẩu mới">
                <span asp-validation-for="newpassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email">Confirm PassWord</label>
                <input class="input" type="password" asp-for="Passwordcheck" placeholder="Nhập lại mật khẩu">
                <span asp-validation-for="Passwordcheck" class="text-danger"></span>
            </div>
            <button class="form-submit-btn" type="submit">Send Email</button>
        </form>

        <p class="signup-link">
            Don't have an account?
            <a asp-action="DangKy" asp-controller="Khachhang" class="signup-link link"> Sign up now</a>
        </p>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}
