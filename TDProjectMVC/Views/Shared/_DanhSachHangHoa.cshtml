@{
    Layout = "_LayoutShared";
}
@RenderSection("BreadCum", required: false)

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                @await Component.InvokeAsync("DanhMuc")
                <!-- /aside Widget -->
                <!-- aside Widget -->
@*                 <div class="aside">
                    <h3 class="aside-title">Price (VND)</h3>
                    <div class="price-filter">
                        <div id="price-slider"></div>
                        <div class="input-number price-min">
                            <input id="price-min" type="number" value="0">
                            <span class="qty-up">+</span>
                            <span class="qty-down">-</span>
                        </div>
                        <span>-</span>
                        <div class="input-number price-max">
                            <input id="price-max" type="number" value="100000000">
                            <span class="qty-up">+</span>
                            <span class="qty-down">-</span>
                        </div>
                        <button id="filterPriceBtn">Filter by Price</button>
                    </div>
                </div> *@
                <div class="aside">
                    <h3 class="aside-title">Price (VND)</h3>
                    <p>
                        <label for="amount">Price range:</label>
                        <input type="text" id="amount" readonly style="border:0; color:#D10024; font-weight:bold;">
                    </p>
                    <div class="price-filter">
                        <div id="slider-range"></div>
                    </div>
                    <button id="filterPriceBtn">Filter by Price</button>
                </div>


                <!-- /aside Widget -->
                @await Component.InvokeAsync("HangSp")
                @await Component.InvokeAsync("MenuLoai")

                <!-- /aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">Top selling</h3>
                    @await Component.InvokeAsync("TopProduct")
                </div>
                <!-- /aside Widget -->
            </div>
            <!-- /ASIDE -->
            <!-- STORE TOP PRODUCT -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <label>
                            Sort By:
                            <select class="input-select">
                                <option value="0">Popular</option>
                                <option value="1">Position</option>
                            </select>
                        </label>
                        <label>
                            Show:
                            <select class="input-select">
                                <option value="0">20</option>
                                <option value="1">50</option>
                            </select>
                        </label>
                    </div>
                    <div class="store-sort" style="margin-left: 5px;">
                        <form asp-action="Search" asp-controller="Product" method="get">
                            <input type="search" class="timkiem-top" placeholder=" keywords ..." aria-describedby="searchButton" name="query" style="border: 1px solid #E4E7ED; height: 40px;">
                            <button type="submit" id="searchButton" style="background-color: #D10024; border-color: #D10024; color: #FFF; cursor: default; width: 40px; height: 40px; margin-bottom: 5px;">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>
                    </div>
                    <ul class="store-grid">
                        <li class="active"><i class="fa fa-th"></i></li>
                        <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                    </ul>
                </div>
                <!-- /store top filter -->
                <!-- store products -->
                <div class="row">
                    @RenderBody()
                    <div class="clearfix visible-sm visible-xs"></div>
                </div>
                <!-- /store products -->
            </div>
            <!-- /STORE TOP PRODUCT -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
