@model IEnumerable<TDProjectMVC.ViewModels.HangSpVM>

<div class="aside">
    <h3 class="aside-title">BRAND</h3>
    <div class="checkbox-filter" id="brand-list">
        <!-- Hiển thị 5 hãng đầu tiên -->
        @foreach (var item in Model.Take(5))
        {
            <div class="input-checkbox">
                <a asp-controller="Product" asp-action="Index" asp-route-hang="@item.MaNCC" class="brand">
                    <label style="padding-left:unset">
                        @item.TenCongTy
                        <small>(@item.SoLuong)</small>
                    </label>
                </a>
            </div>
        }

        <!-- Phần ẩn: các hãng còn lại -->
        <div id="more-brands" style="display: none;">
            @foreach (var item in Model.Skip(5))
            {
                <div class="input-checkbox" style="margin-top:10px;">
                    <a asp-controller="Product" asp-action="Index" asp-route-hang="@item.MaNCC" class="brand">
                        <label style="padding-left:unset">
                            @item.TenCongTy
                            <small>(@item.SoLuong)</small>
                        </label>
                    </a>
                </div>
            }
        </div>

        <!-- Nút Show More / Show Less -->
        <button id="toggle-brands" class="btn btn-link" onclick="toggleBrands()" style="margin-left: -15px;">Show More</button>
    </div>
</div>