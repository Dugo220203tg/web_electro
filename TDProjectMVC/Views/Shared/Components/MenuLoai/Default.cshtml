@model IEnumerable<TDProjectMVC.ViewModels.MenuLoaiVM>

<div class="aside">
    <h3 class="aside-title">Mã loại</h3>
    <div class="checkbox-filter">
        @foreach (var item in Model)
        {
            <div class="input-checkbox">
                <a asp-controller="Product" asp-action="Index" asp-route-loai="@item.MaLoai" class="danhmuc">
                    @*                         <input type="checkbox" id="category-1">
                *@
                    <label for="category-1" style="padding-left:unset">
                        @item.TenLoai
                        <small> (@item.SoLuong)</small>
                    </label>
                </a>
            </div>
        }
    </div>
</div>
