@model IEnumerable<TDProjectMVC.ViewModels.DanhGiaVM>

@foreach (var item in Model)
{
    <div id="rating">
        <div class="rating-avg">
            <span>@item.TrungBinhSao</span>
            <div class="rating-stars">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= item.TrungBinhSao)
                    {
                        <i class="fa fa-star"></i>
                    }
                    else
                    {
                        <i class="fa fa-star-o empty"></i>
                    }
                }
            </div>
        </div>
        <ul class="rating">
            <li>
                <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <div class="rating-progress">
                    <div style="width: @item.NamSaoPercentage%;"></div>
                </div>
                <span class="sum">@item.NamSao</span>
            </li>
            <li>
                <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="rating-progress">
                    <div style="width: @item.BonSaoPercentage%;"></div>
                </div>
                <span class="sum">@item.BonSao</span>
            </li>
            <li>
                <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="rating-progress">
                    <div style="width: @item.BaSaoPercentage%;"></div>
                </div>
                <span class="sum">@item.BaSao</span>
            </li>
            <li>
                <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="rating-progress">
                    <div style="width: @item.HaiSaoPercentage%;"></div>
                </div>
                <span class="sum">@item.HaiSao</span>
            </li>
            <li>
                <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="rating-progress">
                    <div style="width: @item.MotSaoPercentage%;"></div>
                </div>
                <span class="sum">@item.MotSao</span>
            </li>
        </ul>
    </div>
}
