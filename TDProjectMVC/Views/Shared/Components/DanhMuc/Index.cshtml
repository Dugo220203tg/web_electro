@model IEnumerable<TDProjectMVC.ViewModels.DanhMucVM>
<div class="aside">
    <h3 class="aside-title">Danh mục</h3>
    <div class="checkbox-filter">
        @foreach (var item in Model)
        {
            <div class="input-checkbox danhmuc-cb">
                <input type="checkbox"
                       id="@item.ID"
                       class="danhmuc-checkbox"
                @(item.IsSelected ? "checked" : "")
                       data-url="@Url.Action("Index", "Product", new
                    {
                        danhmuc = item.ID,
                        minPrice = Context.Request.Query["minPrice"].ToString(),
                        maxPrice = Context.Request.Query["maxPrice"].ToString(),
                        sortOrder = Context.Request.Query["sortOrder"].ToString(),
                        loai = Context.Request.Query["loai"].ToString(),
                        hang = Context.Request.Query["hang"].ToString(),
                        query = Context.Request.Query["query"].ToString()
                    })" />
                <label for="@item.ID">
                    <span></span>@item.TenDanhMuc
                </label>
            </div>
        }
    </div>
</div>
