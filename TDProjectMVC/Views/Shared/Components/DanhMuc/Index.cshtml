@model IEnumerable<TDProjectMVC.ViewModels.DanhMucVM>

<div class="aside">
    <h3 class="aside-title">Danh mục</h3>
    <div class="checkbox-filter">
        @foreach (var item in Model)
        {
            <div class="input-checkbox">
                <input type="checkbox" id="@item.ID" class="danhmuc-checkbox" data-url="@Url.Action("Index", "Product", new { danhmuc = item.ID })" />
                <label for="@item.ID">
                    <span></span>@item.TenDanhMuc
                </label>
            </div>
        }
    </div>
</div>