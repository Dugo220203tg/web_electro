@model TDProjectMVC.ViewModels.HangHoaVM

@{
    ViewBag.Title = "title";
    Layout = "_LayoutShared";
}
<!-- Add this to your _QuickViewPartial.cshtml -->
<div class="custom-modal" id="quickViewModal">
    <div class="modal-overlay">
        <div class="modal-container ">
            <div class="modal-content">
                <span class="modal-close">&times;</span>
                <div class="product-view">
                    <div class="product-images w-100">
                        <div id="product-main-img" class="slick-initialized slick-slider">
                            <button class="slider-nav prev-btn" onclick="prevSlide()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                                </svg>
                            </button>

                            <button class="slider-nav next-btn" onclick="nextSlide()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z" />
                                </svg>
                            </button>

                            <div class="slider-container">
                                @foreach (var imageUrl in Model.ImageUrls)
                                {
                                    <div class="product-preview">
                                        <img src="~/Hinh/Hinh/HangHoa/@Model.MaHH/@imageUrl" alt="@Model.TenHH">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="product-info product-details">
                        <h2 class="product-name">@Model.TenHH</h2>
                        <div>
                            <div class="product-rating">
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < Model.DiemDanhGia)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star-o"></i>
                                    }
                                }
                            </div>
                            <a class="review-link" href="#">@Model.CountDg Review(s) | Add your review</a>
                        </div>
                        <div>
                            <h4 class="product-price">
                                @Model.DonGia.ToString("#,##0 VNĐ")
                                &nbsp;
                            </h4>
                            <del class="product-old-price">
                                @((Model.DonGia * (100 + Model.GiamGia) / 100).ToString("#,##0"))
                            </del>
                            <span class="product-available">In Stock</span>
                        </div>
                        <div class="add-to-cart">
                            <form id="addToCartForm">
                                <div class="qty-label">
                                    Qty
                                    <div class="input-number">
                                        <input type="number" id="quantity" name="quantity" value="1" min="1">
                                        <span class="qty-up">+</span>
                                        <span class="qty-down">-</span>
                                    </div>
                                </div>
                                <button type="button" class="add-to-cart-btn" onclick="addToCart(@Model.MaHH, $ ('#quantity').val(), 'Normal')">
                                    <i class="fa fa-shopping-cart"></i> add to cart
                                </button>
                            </form>
                        </div>
                        <ul class="product-btns">
                            <li>
                                <a href="#" onclick="addToWishlist('@Model.MaHH'); return false;">
                                    <i class="fa fa-heart-o"></i> ADD TO WISHLIST
                                </a>
                            </li>
                            <li><a href="#"><i class="fa fa-exchange"></i> add to compare</a></li>
                        </ul>
                        <ul class="product-links">
                            <li>Category:</li>
                            <li><a href="/Product/@Model.ML">@Model.TenLoai</a></li>
                            <li><a href="Product/@Model.NCC">@Model.MaNCC</a></li>
                        </ul>

                        <ul class="product-links">
                            <li>Share:</li>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
