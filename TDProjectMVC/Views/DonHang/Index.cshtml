@using TDProjectMVC.Helpers;
@using TDProjectMVC.ViewModels;

@model Tuple<DonHangVM, PaginatedList<DonHangVM>>;

<!-- Breadcrumb Section -->
<div id="breadcrumb" class="section py-3">
    <div class="container text-center">
        <h2>
            <a href="/DonHang/AllDonHang" class="text-decoration-none">
                Lịch sử mua hàng
            </a>
        </h2>
    </div>
</div>

<!-- Main Container -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <!-- Left Column: Most Recent Order -->
        <div class="row">
            <div class="col-md-6">
                <div id="recent-order-section">
                    @if (Model.Item1 != null)
                    {
                        <h3>Đơn Hàng Gần Nhất</h3>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Products</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ct in Model.Item1.ChiTietHds)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                @if (!string.IsNullOrEmpty(ct.HinhAnh))
                                                {
                                                    var firstImageUrl = ct.HinhAnh.Split(',').FirstOrDefault();
                                                    <img src="~/Hinh/Hinh/HangHoa/@ct.MaHH/@firstImageUrl"
                                                         class="img-fluid rounded-circle"
                                                         style="width: 80px; height: 80px;"
                                                         alt="@ct.TenHangHoa">
                                                }
                                                else
                                                {
                                                    <span>No image available</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <p class="fw-bold mb-1">
                                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@ct.MaHH" class="text-decoration-none">
                                                        @ct.TenHangHoa
                                                    </a>
                                                </p>
                                                <p class="mb-0">X @ct.SoLuong</p>
                                            </td>
                                            <td class="align-middle text-danger">$ @ct.DonGia.ToString("0.00")</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="2" class="text-end fw-bold">Order Total:</td>
                                        <td class="text-danger fw-bold">$ @Model.Item1.ChiTietHds.Sum(ct => ct.ThanhTien).ToString("0.00")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end">
                                            <a class="btn btn-danger me-2" asp-action="ChiTietDonHang" asp-controller="DonHang" asp-route-MaHD="@Model.Item1.MaHD">
                                                Chi tiết đơn hàng
                                            </a>
                                            <button class="btn btn-danger" onclick="confirmCancelOrder(@Model.Item1.MaHD, this)">
                                                Hủy đơn hàng
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>

            <!-- Right Column: Order List -->
            <div class="col-md-6">
                <h3>Danh Sách Đơn Hàng</h3>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Order ID</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Item2)
                            {
                                <tr>
                                    <td class="align-middle">@order.MaHD</td>
                                    <td class="align-middle">@order.NgayDat.ToString("dd/MM/yyyy")</td>
                                    <td class="align-middle">@order.TrangThai</td>
                                    <td class="align-middle text-end">
                                        <button class="btn btn-danger view-order" data-id="@order.MaHD">
                                            View
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Index", new { page = 1, pageSize = ViewBag.PageSize })" class="btn btn-outline-secondary me-2">&laquo;</a>
                        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })" class="btn btn-outline-secondary me-2">&lt;</a>
                    }
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })"
                           class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-outline-secondary") me-2">@i</a>
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })" class="btn btn-outline-secondary me-2">&gt;</a>
                        <a href="@Url.Action("Index", new { page = ViewBag.TotalPages, pageSize = ViewBag.PageSize })" class="btn btn-outline-secondary">&raquo;</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
