@model TrangQuanLy.Models.HangSpViewMD
@{
    ViewData["Title"] = "Edit";
    Layout = "_Footer-Header";
}
<div class="container-fluid pt-4 px-4" style="display: grid; place-items: center;">
    <div class="bg-secondary rounded h-100 p-4">
        <h5 class="mb-4">Cập nhật thông tin</h5>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="MaNCC" class="form-control" name="MaNcc" />
            <div class="mb-3">
                <label asp-for="TenCongTy" class="control-label"></label>
                <input asp-for="TenCongTy" class="form-control" />
                <span asp-validation-for="TenCongTy" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Mota" class="control-label"></label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NguoiLienLac" class="control-label"></label>
                <input asp-for="NguoiLienLac" class="form-control" />
                <span asp-validation-for="NguoiLienLac" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DienThoai" class="control-label"></label>
                <input asp-for="DienThoai" class="form-control" />
                <span asp-validation-for="DienThoai" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Logo" for="formFile" class="form-label">Chọn hình ảnh sản phẩm</label>
                <input asp-for="Logo" class="form-control bg-dark" type="file" id="formFile" onchange="previewImage(this)">
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <img id="imagePreview" src="#" alt="Hình ảnh sản phẩm" style="display: none; max-width: 100%; max-height: 200px;">
            <div class="mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">X</a>


