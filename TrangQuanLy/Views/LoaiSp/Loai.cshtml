@model IEnumerable<TrangQuanLy.Models.LoaiSpViewMD>

<body>
    @foreach (var item in Model)
    {

        <tr>
            <td><input class="form-check-input" type="checkbox"></td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td style="color: white;">
                <img src="~/Hinh/Hinh/Loai/@item.Hinh" alt="@item.Hinh" style="width:60px;height:60px;" />
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td style="display:flex;align-items: center; color: white; padding: 11px;">
                <form method="get" style="margin-right:5px" action="@Url.Action("Edit", new { id = item.MaLoai })">
                    <button type="submit" class="btn btn-outline-info m-2">                    <i class="bi bi-pencil-square"></i>
                    </button>
                </form>
                <form id="delete-form" style="margin-right:5px" method="post" asp-action="Delete">
                    <input type="hidden" name="Maloai" value="@item.MaLoai" />
                    <button type="submit" value="Delete" class="btn btn-outline-info m-2">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
    }
</body>