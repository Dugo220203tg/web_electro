@model TrangQuanLy.Models.DanhGiaSpMD
@{
    ViewData["Title"] = "Edit";
    Layout = "_Footer-Header";
}

<div class="container-fluid pt-4 px-4" style="display:grid; place-items:center;">
    <div class="bg-secondary rounded h-100 p-4">
        <h5 class="mb-4">Cập nhật thông tin</h5>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaDg" id="id" />

            <div class="form-group">
                <label asp-for="MaKH" class="control-label">Mã khách hàng</label>
                <input asp-for="MaKH" class="form-control" readonly />
                <span asp-validation-for="MaKH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaHH" class="control-label">Mã hàng hóa</label>
                <input asp-for="MaHH" class="form-control" />
                <span asp-validation-for="MaHH" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <img id="imagePreview" src="~/Hinh/Hinh/HangHoa/@Model.MaHH/@Model.FirstImageUrl" alt="Hình ảnh sản phẩm"
                     style="width:75px; height:75px; max-width: 100%; max-height: 200px;" />
            </div>

            <div class="form-group">
                <label asp-for="Sao" class="control-label">Sao</label>
                <input asp-for="Sao" class="form-control" />
                <span asp-validation-for="Sao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NoiDung" class="control-label">Nội dung</label>
                <textarea asp-for="NoiDung" class="form-control" rows="4"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngay" class="control-label">Ngày</label>
                <input asp-for="Ngay" class="form-control" rows="4" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <a class="close-button btn btn-danger" href="/DanhGiaSp">X</a>
    </div>
</div>
